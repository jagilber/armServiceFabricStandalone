# Azure Service Fabric Standalone Deployment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to git (it contains sensitive data)

# ========================================
# Azure Deployment Settings
# ========================================
RESOURCE_GROUP=your-resource-group-name
LOCATION=centralus
DEPLOYMENT_NAME=

# ========================================
# Template Files
# ========================================
TEMPLATE_FILE=azuredeploy.json
TEMPLATE_PARAMETER_FILE=azuredeploy.Parameters.json

# ========================================
# VM Administrator Credentials
# ========================================
ADMIN_USERNAME=cloudadmin
ADMIN_PASSWORD=

# ========================================
# Certificate Configuration
# ========================================
CERTIFICATE_THUMBPRINT=
CERTIFICATE_URL_VALUE=
CERTIFICATE_COMMON_NAME=
SOURCE_VAULT_VALUE=

# ========================================
# Service Fabric Cluster Configuration
# ========================================
CLUSTER_NAME=
DNS_NAME=

# ========================================
# Network Configuration
# ========================================
ADDRESS_PREFIX=10.0.0.0/16
SUBNET_0_PREFIX=10.0.0.0/24
SUBNET_0_NAME=Subnet-0
VIRTUAL_NETWORK_NAME=VNet
NETWORK_SECURITY_GROUP_NAME=SF-NSG

# ========================================
# Load Balancer Configuration
# ========================================
LB_IP_NAME=PublicIP-SLB-FE
NIC_NAME=NIC

# ========================================
# Service Fabric Ports
# ========================================
FABRIC_TCP_GATEWAY_PORT=19000
FABRIC_HTTP_GATEWAY_PORT=19080

# ========================================
# VM Configuration
# ========================================
VM_NODE_TYPE_0_NAME=nt0
VM_NODE_TYPE_0_SIZE=Standard_D4ads_v5
VIRTUAL_MACHINE_COUNT=5
NODE_TYPE_COUNT=1

# ========================================
# VM Image Configuration
# ========================================
OPERATING_SYSTEM=Server2022
VM_IMAGE_PUBLISHER=MicrosoftWindowsServer
VM_IMAGE_OFFER=WindowsServer
VM_IMAGE_SKU=2022-Datacenter
VM_IMAGE_VERSION=latest

# ========================================
# Storage Configuration
# ========================================
STORAGE_ACCOUNT_TYPE=Standard_LRS
DIAGNOSTIC_STORAGE_ACCOUNT_NAME=

# ========================================
# Service Fabric Configuration
# ========================================
SERVICE_FABRIC_PACKAGE_URL=https://go.microsoft.com/fwlink/?LinkId=730690

# ========================================
# Deployment Script Settings
# ========================================
# Path to load-envFile.ps1 script
LOAD_ENV_SCRIPT=C:\github\jagilber\powershellscripts\load-envFile.ps1

# Path to azure-az-deploy-template.ps1 script
DEPLOY_SCRIPT=C:\github\jagilber\powershellscripts\azure-az-deploy-template.ps1

# Deployment mode: incremental or complete
DEPLOYMENT_MODE=incremental

# Set to 'true' to test deployment without actually deploying
TEST_DEPLOYMENT=false

# Set to 'true' to force clean deployment (delete and recreate resource group)
CLEAN_DEPLOYMENT=false
